# Kanshi - Configuration automatique des écrans
# Les profils sont détectés automatiquement selon les écrans connectés

# Profil laptop seul
profile laptop {
    output eDP-1 enable mode 1920x1080 position 0,0 scale 1
}

# Profil travail - exemple avec écran externe à droite
# Décommente et adapte selon ton setup travail
# profile travail {
#     output eDP-1 enable mode 1920x1080 position 0,0 scale 1
#     output "Dell Inc. DELL U2419H ABC123" enable mode 1920x1080 position 1920,0 scale 1
# }

# Profil docked - LEN T24i-10 au-dessus (rotation 180°), Odyssey en dessous, laptop off
profile docked {
    output DVI-I-2 enable mode 1920x1080@60Hz position 0,0 transform 180
    output DVI-I-1 enable mode 1920x1080@60Hz position 0,1080
    output eDP-1 disable
}

# Profil un seul écran externe (fallback pendant initialisation DisplayLink)
profile single-external {
    output DVI-I-1 enable mode 1920x1080@60Hz position 0,0
    output eDP-1 disable
}

profile single-external-2 {
    output DVI-I-2 enable mode 1920x1080@60Hz position 0,0
    output eDP-1 disable
}
